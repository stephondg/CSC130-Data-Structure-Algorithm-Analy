import java.util.EmptyStackException;

class Node 
{
    public double info;
    public Node next;

    //Link constructor
    public Node(double info) 
    {
      this(info, null);
    }

    //Print Link info
    public Node(double val, Node next) 
    {
      this.info = val;
      this.next = next;
    }
}

public class ListStack  implements DStack
{
   private Node first;
   private Node last;
   public static void main(String[] args)
   {
   }
   
   public ListStack()
   {
      this.first = null;
   }
   
   public boolean isEmpty()
   {
      return this.first == null;
   }
   
   public void push(double n)
   {
      if (first == null)
         first = new Node(n, null);
      else
         first = new Node(n, first);
   }
   
   public double pop()
   {
      if(this.isEmpty())
         throw new EmptyStackException();
      double firstVal = this.first.info;
      this.first = this.first.next;
      return firstVal;
   }
   
   public double peek()
   {
      if(this.isEmpty())
         throw new EmptyStackException();
      return this.first.info;
   }
}
